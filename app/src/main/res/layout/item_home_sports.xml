<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_8"
    android:layout_marginEnd="@dimen/margin_8"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imgHomeSport"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="@dimen/padding_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_favorite" />

    <TextView
        android:id="@+id/txtSportType"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_4"
        android:layout_marginBottom="@dimen/margin_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgHomeSport"
        app:layout_constraintStart_toStartOf="@+id/imgHomeSport"
        app:layout_constraintTop_toBottomOf="@+id/imgHomeSport"
        tools:text="fkjnsdfdksj" />

</androidx.constraintlayout.widget.ConstraintLayout>